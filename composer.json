{
    "name": "dbtlr/php-env-builder",
    "description": "A PHP library that assists in automating the building of .env files.",
    "keywords": ["cli", "php", "terminal", "command", "env", "builder"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.1",
        "league/climate": "^3.4",
        "composer/composer": "^1.7",
        "vlucas/phpdotenv": "^2.5"
    },
    "authors": [
        {
            "name": "Drew Butler",
            "email": "hi@dbtlr.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7.3",
        "mockery/mockery": "^1.1",
        "mikey179/vfsStream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Dbtlr\\PHPEnvBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbtlr\\PHPEnvBuilder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 src",
        "test": "phpunit"
    }
}
